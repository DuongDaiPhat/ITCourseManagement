<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.media.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="700.0" prefWidth="1000" stylesheets="@instructorAddLecturePage.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="backend.controller.instructorCreatePageController.InstructorAddLectureController">
    <top>
        <!-- Navigation Bar -->
        <VBox styleClass="navigation">
            <!-- Top Navigation Bar -->
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-nav">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
                
                <!-- Company Logo and Name -->
                <Label styleClass="company-name" text="AiTeeCo" />
                
                <!-- Navigation Links -->
                <HBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS">
                    <Label styleClass="nav-link" text="Explore" />
                    <Label styleClass="nav-link" text="MyCourse" />
                    <Label styleClass="nav-link" text="Create Course" fx:id = "createCourse"/>
                </HBox>
                
                <!-- Search Bar -->
                <HBox styleClass="search-container">
                    <TextField promptText="Search..." styleClass="search-input" />
                    <Button styleClass="search-button">
                        <graphic>
                            <ImageView fitHeight="16" fitWidth="16">
                                <Image url="@/images/main_page/icon/WhiteMagnifier.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>
                
                <!-- Icons -->
                <Button styleClass="icon-button">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <Image url="@/images/main_page/icon/Notification.png" />
                     
                        </ImageView>
                    </graphic>
                </Button>
                
                <Button styleClass="icon-button">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <Image url="@/images/main_page/icon/MyProfile.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
            
            <!-- Bottom Decoration Bar -->
            <HBox minHeight="6.0" prefHeight="6.0" prefWidth="1000.0" styleClass="bottom-nav" />
        </VBox>
       </top>
       <center>
       <!--Main-->
       <ScrollPane fx:id="mainScrollPane" fitToWidth="true" id = "myScrollPane">
	    <content>
	        <VBox fx:id="mainContainer" spacing="10" styleClass="main-container">
	            <!-- Add Lecture Bar -->
	            <VBox styleClass="lecture-bar-container">
	                <HBox fx:id="addLectureBar" styleClass="add-lecture-bar" onMouseClicked="#toggleAddLectureForm">
	                    <Label text="Add Lecture" styleClass="bar-title"/>
	                    <Region HBox.hgrow="ALWAYS" />
	                    <Label fx:id="addLectureArrow" text="▲" styleClass="arrow"/>
	                    <padding>
	                        <Insets top="10" right="15" bottom="10" left="15" />
	                    </padding>
	                </HBox>
	                
	                <!-- Create Lecture Form (Hidden by default) -->
	                <VBox fx:id="createLectureForm" styleClass="lecture-form" visible="false" managed="false">
	                    <padding>
	                        <Insets top="15" right="15" bottom="15" left="15" />
	                    </padding>
	                    
	                    <Label text="Lecture Name:" styleClass="form-label"/>
	                    <TextField fx:id="lectureName" promptText="Enter lecture name" styleClass="form-field"/>
	                    
	                    <Label text="Video URL:" styleClass="form-label"/>
	                    <HBox spacing="10">
	                        <TextField fx:id="videoUrl" promptText="Enter video URL" styleClass="form-field" HBox.hgrow="ALWAYS"/>
	                        <Button text="Browse" onAction="#browseVideo" styleClass="browse-button"/>
	                    </HBox>
	                    <MediaView fx:id="mediaView" fitWidth="600" preserveRatio="true" />
	                    <Label text="Duration (minutes):" styleClass="form-label"/>
	                    <TextField fx:id="duration" promptText="Duration will be calculated automatically" styleClass="form-field" disable="true"/>
	                    
	                    <Label text="Lecture Description:" styleClass="form-label"/>
	                    <TextArea fx:id="lectureDescription" promptText="Enter lecture description" styleClass="form-field" wrapText="true" prefRowCount="4"/>
	                    
	                    <HBox spacing="10" alignment="CENTER_RIGHT">
	                        <Button text="Cancel" onAction="#cancelAddLecture" styleClass="cancel-button"/>
	                        <Button text="Add Lecture" onAction="#addLecture" styleClass="add-button"/>
	                    </HBox>
	                </VBox>
	            </VBox>
	            
		            <!-- Existing Lectures Container -->
		            <VBox fx:id="lecturesContainer" spacing="10">
		                <!-- Lecture cards will be added here dynamically -->
		            </VBox>
	       		</VBox>
	   		 </content>
		</ScrollPane>
	</center> 
	<bottom>
        <!-- Footer -->
        <HBox alignment="CENTER" prefHeight="86.0" prefWidth="1000.0" styleClass="footer">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>
            
            <HBox alignment="CENTER" spacing="15">
               
               <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                   <Label styleClass="footer-text" text="AiTeeCo © 2025" />
                   <Label styleClass="footer-text" text="All rights reserved" />
               </VBox>
            </HBox>
        </HBox>
   </bottom>
</BorderPane>
